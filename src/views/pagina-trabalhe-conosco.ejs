<%- include("partials/header") %>


  <main>

    <section class="trabalhe-conosco">
      <div>
        <h1>Trabalhe Conosco</h1>
        <h3>Envie seu currículo para gente.</h3>
      </div>

      <div>
        <form>
          <div>
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome">
            <div class="invisible err-nome red">Por favor, preencha seu nome.</div>
          </div>

          <div>
            <label for="email">Email</label>
            <input type="email" name="email" id="email">
            <div class="invisible err-email red">Por favor, preencha seu email.</div>
          </div>

          <div>
            <label for="tel">Telefone</label>
            <input type="tel" name="tel" id="tel">
            <div class="invisible err-tel red">Por favor, preencha seu Telefone.</div>
          </div>

          <div>
            <label>Departamentos</label>
            <select name="dep" id="dep">
              <option>Selecionar</option>
              <option value="financeiro">Financeiro</option>
              <option value="sac">Recursos Humanos</option>
              <oPtion value="vendas">Vendas</OPtion>
              <option value="tecnologia">Tecnologia</option>
            </select>
          </div>

          <div>
            <div>
              <label>Disponibilidade</label>
            </div>
            <div class="boxes">
              <div>
                <input type="checkbox" id="int" name="dis" value="integral(8h)"><label for="int">integral(8h)</label>
              </div>
              <div>
                <input type="checkbox" id="meio" name="dis" value="meio periodo"><label for="meio">Meio
                  Período(4h)</label>
              </div>
              <div>
                <input type="checkbox" id="free" name="dis" value="freelancer"><label for="free">Freelancer</label>
              </div>
            </div>
          </div>

          <div>
            <div>
              <label>Qual a melhor forma para entrarmos em contato com você?</label>
            </div>
            <div class="boxes">
              <div>
                <input type="radio" name="contato" id="contato" value="email"><label for="contato">Email</label>
              </div>
              <div>
                <input type="radio" name="contato" id="contato" value="ligacao"><label for="contato">Ligação</label>
              </div>
              <div>
                <input type="radio" name="contato" id="contato" value="whatsApp"><label for="contato">WhatsApp</label>
              </div>
            </div>
          </div>

          <div>
            <label>Mensagem</label>
            <textarea name="mens" id="mens" cols="30" rows="10"></textarea>
          </div>
          <div class="bt-upload">
            <label>Curriculo</label><button>Upload</button>
          </div>
          <div class="bt-enviar">
            <button>Enviar</button>
          </div>
        </form>
      </div>
    </section>
  </main>
  <%- include("partials/footer") %>