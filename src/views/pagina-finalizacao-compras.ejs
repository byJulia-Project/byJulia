<%- include("partials/header") %>
    <h1>Finalizar compra</h1>
    <form action="url_para_enviar_dados_do_formulario" method="post">
        <fieldset>
            <h2>Endereço para entrega</h2>
            <div class="input-duplo">
                <div>
                    <label for="nome">Nome: <span>*</span></label>
                    <input type="text" name="nome" id="nome" placeholder="Digite seu nome" required>
                </div>
                <div>
                    <label for="sobrenome">Sobrenome: <span>*</span></label>
                    <input type="text" name="sobrenome" id="sobrenome" placeholder="Digite seu sobrenome" required>
                </div>
            </div>
            <div class="input-simples">
                <label for="email">Email: <span>*</span></label>
                <input type="email" name="email" id="email" placeholder="me@you.com" required>
            </div>
            <div class="input-simples">
                <label for="endereco">Endereço: <span>*</span></label>
                <input type="text" name="endereco" id="endereco" required>
            </div>
            <div class="input-duplo">
                <div>
                    <label for="cep">CEP: <span>*</span></label>
                    <input type="text" name="cep" id="cep" required>
                </div>
                <div>
                    <label for="localidade">Cidade: <span>*</span></label>
                    <input type="text" name="localidade" id="localidade" required>
                </div>
                <div>
                    <label for="estado">UF</label>
                    <div class="select-wrapper">
                        <select name="estado" id="estado" required>
                            <option value="saoPaulo">SP</option>
                            <option value="parana">PR</option>
                            <option value="rioDeJaniro">RJ</option>
                            <option value="minasGerais">MG</option>
                        </select>
                    </div>
                </div>
            </div>
            <h2>Opção de envio</h2>
            <div class="input-envio">
                <div class="radio">
                    <input class="" type="radio" name="opcao-envio" id="gratis" value="gratis">
                    <label for="gratis">Grátis</label>
                </div>
                <div class="radio">
                    <input class="" type="radio" name="opcao-envio" id="normal" value="normal">
                    <label for="normal">Normal</label>
                </div>
                <div class="radio">
                    <input type="radio" name="opcao-envio" id="expresso" value="expresso">
                    <label for="expresso">Expresso</label>
                </div>
            </div>

            <button type="submit">Enviar</button>
        </fieldset>
    </form>
<%- include("partials/footer") %>